function main(){

topRight ();
topRight ();
topRight ();
topRight ();

}

function moveFourTimes(){
   move();
   move();
   move();
   move();
}

function topRight(){
   moveFourTimes();
   turnLeft();
   moveFourTimes();
   turnLeft();
   moveFourTimes();
   turnLeft();
   moveFourTimes();
   turnLeft();
}

