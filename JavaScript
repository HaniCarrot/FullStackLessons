13.1 Exercise

var guestList = ["Jack", "Joe", "Pam", "Alex", "Luke", "Carrot", "Hannah"];

var lowerGuestName = guestName.toLowerCase();
var lowerGuestList = guestList.map(name => name.toLowerCase());

var guestName = prompt("What is your name?")

if (lowerGuestList.includes(lowerGuestName)) {
    alert("Welcome.");
} else {
    alert("You are not welcome here.");
}

13.2 Shortened version

var guestList = ["Jack", "Joe", "Pam", "Alex", "Luke", "Carrot", "Hannah"];

var guestName = prompt("What is your name?");

if (guestList.some(name => name.toLowerCase() === guestName.toLowerCase())) {
    alert("Welcome.");
} else {
    alert("You are not welcome here.");
}

