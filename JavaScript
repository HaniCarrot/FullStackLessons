13.1 Exercise

var guestList = ["Jack", "Joe", "Pam", "Alex", "Luke", "Carrot", "Hannah"];

var lowerGuestName = guestName.toLowerCase();
var lowerGuestList = guestList.map(name => name.toLowerCase());

var guestName = prompt("What is your name?")

if (lowerGuestList.includes(lowerGuestName)) {
    alert("Welcome.");
} else {
    alert("You are not welcome here.");
}

13.2 Shortened version

var guestList = ["Jack", "Joe", "Pam", "Alex", "Luke", "Carrot", "Hannah"];

var guestName = prompt("What is your name?");

if (guestList.some(name => name.toLowerCase() === guestName.toLowerCase())) {
    alert("Welcome.");
} else {
    alert("You are not welcome here.");
}

14. Fizz Buzz

output.push()

var output = [];
var count = 1;

function fizzBuzz() {

if (count % 3 === 0 && count % 5 === 0) {
    output.push("FizzBuzz");
} else if (count % 3 === 0) {
    output.push("Fizz");
} else if (count % 5 === 0) {
    output.push("Buzz");
} else {
    output.push(count);
}

    count++;
    console.log(output);
}

fizzBuzz();

15. Who's Buying Lunch? Challenge

function whosPaying(names) {
    
/******Don't change the code above*******/
    
    var numberOfPeople = names.length;
    var randomPersonPosition = Math.floor(Math.random() * numberOfPeople);
    var randomPerson = names[randomPersonPosition];
    
    return randomPerson + " is going to buy lunch today!";


/******Don't change the code below*******/    
}

