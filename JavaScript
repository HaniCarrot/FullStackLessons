putBeeper();
movePlace();
movePlace2();
movePlace();
movePlace2();
movePlace();

}

function movePlace(){
   putBeeper();
   move();
   move();
   putBeeper();
   move();
   move();
   putBeeper();
   turnLeft();
}

function movePlace2(){
   move();
   turnLeft();
   move();
   putBeeper();
   move();
   move();
   putBeeper();
   move();
   turnRight();
   move();
   turnRight();

}

